<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="100dp"
                                                   android:orientation="vertical"
                                                   android:layout_marginStart="3dp">

    <ImageView
            android:id="@+id/item_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:contentDescription="@null"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/item_show_a"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_resource_image"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/item_show_b"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:gravity="bottom"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@+id/item_show_a"
            app:layout_constraintStart_toEndOf="@+id/item_resource_image"
            app:layout_constraintEnd_toStartOf="@+id/item_show_d"/>

    <TextView
            android:id="@+id/item_show_d"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:gravity="bottom"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@+id/item_show_a"
            app:layout_constraintStart_toEndOf="@+id/item_show_b"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/item_show_c"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="11sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:scrollHorizontally="false"
            app:layout_constraintTop_toBottomOf="@+id/item_resource_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/item_show_e"/>


    <TextView
            android:id="@+id/item_show_e"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:gravity="end"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>