<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/item_char_temp_line"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginBottom="1dp"
              android:background="@color/gray4">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="5dp">

        <ImageView
                android:id="@+id/star"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:src="@drawable/vector_must_fill"/>

        <TextView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:text="@string/template_rv_item_name"
                android:gravity="center_vertical"/>

        <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                android:id="@+id/value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:hint="@string/item_char_temp_et"/>

        <ImageButton
                android:id="@+id/add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:src="@mipmap/add"
                android:background="@color/clear_lucite"/>

        <ImageButton
                android:id="@+id/del"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/vector_delete"
                android:background="@color/clear_lucite"
                android:layout_weight="1"/>

        <ImageButton
                android:id="@+id/order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/vector_touch"
                android:background="@color/clear_lucite"
                android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginStart="45dp">

        <com.xuexiang.xui.widget.button.switchbutton.SwitchButton
                android:id="@+id/fill"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:textSize="8sp"
                android:paddingEnd="10dp"
                android:paddingStart="1dp"
                app:swb_textOn="必填"
                app:swb_textOff="可选"
                tools:ignore="SmallSp"/>
        <ImageButton
                android:id="@+id/set"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:src="@drawable/vector_setting"
                android:background="@color/clear_lucite"/>
        <TextView
                android:id="@+id/type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:textSize="11sp"/>

        <TextView
                android:id="@+id/rely"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="start"
                android:textSize="11sp"/>

    </LinearLayout>


</LinearLayout>